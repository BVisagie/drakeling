<?xml version="1.0" encoding="UTF-8"?>
<!--
  Drakeling â€” macOS launchd user agent

  Install to: ~/Library/LaunchAgents/drakeling.plist

  Adjust ProgramArguments if drakelingd is installed to a
  different path. Secrets and LLM configuration are read from the .env
  file in the platform data directory
  (~/Library/Application Support/drakeling/.env).
  See the README for setup instructions.
-->
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN"
  "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
  <key>Label</key>
  <string>ai.drakeling</string>
  <key>ProgramArguments</key>
  <array>
    <string>/usr/local/bin/drakelingd</string>
  </array>
  <key>RunAtLoad</key>
  <true/>
  <key>KeepAlive</key>
  <true/>
  <key>StandardOutPath</key>
  <string>/tmp/drakeling.log</string>
  <key>StandardErrorPath</key>
  <string>/tmp/drakeling.err</string>
</dict>
</plist>
